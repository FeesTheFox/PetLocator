<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Кисть" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

            <ImageButton
                android:id="@+id/changeBrush"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_register"
                android:padding="16dp"
                android:src="@drawable/brush" />

        </LinearLayout>

        <Space
            android:layout_width="25dp"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Пипетка" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

            <ImageButton
                android:id="@+id/changeColorPicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_register"
                android:padding="16dp"
                android:src="@drawable/color_picker" />

        </LinearLayout>

        <Space
            android:layout_width="25dp"
            android:layout_height="20dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Ластик" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

            <ImageButton
                android:id="@+id/changeEraser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_register"
                android:padding="20dp"
                android:src="@drawable/eraser" />




        </LinearLayout>


        <Space
            android:layout_width="25dp"
            android:layout_height="20dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Заливка" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

            <ImageButton
                android:id="@+id/changeFill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_register"
                android:padding="16.5dp"
                android:src="@drawable/fill" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>